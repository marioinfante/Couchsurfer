<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/picture_dialog"
        android:layout_width="101dp"
        android:layout_height="87dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="141dp"
        app:layout_constraintBottom_toTopOf="@+id/price_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:srcCompat="@android:drawable/ic_input_get" />

    <TextView
        android:id="@+id/author_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="121dp"
        android:text="Author: Testing Author"
        app:layout_constraintBottom_toTopOf="@+id/description_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_dialog" />

    <TextView
        android:id="@+id/description_dialog"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginEnd="63dp"
        android:ellipsize="none"
        android:maxLines="5"
        android:scrollHorizontally="false"
        android:text="Description: Testing Description of a really long description that we should test"
        app:layout_constraintBottom_toTopOf="@+id/dates_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_dialog" />

    <TextView
        android:id="@+id/dates_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="212dp"
        android:text="Dates: yyyymmdd - yyyymmdd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_dialog" />

    <TextView
        android:id="@+id/price_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginEnd="184dp"
        android:text="Price: $xx.xx"
        app:layout_constraintBottom_toTopOf="@+id/author_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picture_dialog" />
</android.support.constraint.ConstraintLayout>